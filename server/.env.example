# 服务器配置
PORT=5001
HOST=0.0.0.0
LOG_LEVEL=info

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 部署配置
# 部署时修改为实际的外网地址，例如：https://your-domain.com
# 注意：回调地址应该指向后端服务器（5001端口），而不是前端（5000端口）
CALLBACK_BASE_URL=https://your-domain.com

# WorkTool 配置（必填，请联系 WorkTool 平台获取）
WORKTOOL_API_BASE_URL=https://api.worktool.com
WORKTOOL_API_KEY=your_api_key_here
WORKTOOL_API_SECRET=your_api_secret_here
WORKTOOL_ROBOT_ID=your_robot_id_here

# 回调签名校验（生产环境强烈建议启用）
ENABLE_SIGNATURE_CHECK=true

# 全局熔断开关（生产环境建议设置为 false）
GLOBAL_CIRCUIT_BREAKER=false

# 数据库配置（如果使用 PostgreSQL）
DATABASE_URL=postgresql://user:password@localhost:5432/worktool_db

# 前端地址（用于 CORS 配置）
FRONTEND_URL=https://your-frontend-domain.com

# 日志管理配置
# 日志保留天数（超过此天数的日志将被自动清理）
LOG_RETENTION_DAYS=30
# 是否启用日志自动清理（每天凌晨3点执行）
LOG_AUTO_CLEANUP=true
